<div class="logo">
<%= image_tag("bigyoshi.png",:class => 'big_yoshi') %>
<h1>Geezer</h1>
</div>

<h2>Artist</h2>
<%= form_tag artists_path, :method => 'get' do %>
    <%= label_tag(:search , 'What artist do you want to listen to?') %>
    <%= text_field_tag :search, "", :class => 'search' %>
    <%= submit_tag("Search", :name => nil) %>

<% end %>

<h2>Album</h2>
<%= form_tag albums_path, :method => 'get' do %>
    <%= label_tag(:search , 'What album do you want to listen to?') %>
    <%= text_field_tag :search, "", :class => 'search' %>
    <%= submit_tag("Search", :name => nil) %>

<% end %>

<h2>Song</h2>
<%= form_tag(songs_path, :method => 'get') do %>
    <%= label_tag(:search , 'What song do you want to listen to?') %>
    <%= text_field_tag :search, "", :class => 'search' %>
    <%= submit_tag("Search", :name => nil) %>

<% end %>