<%= form_for @artist do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :start %>
    <%= f.text_field :start, :placeholder => 'YYYY-MM-DD' %>
    <%= f.label :end %>
    <%= f.text_field :end, :placeholder => 'YYYY-MM-DD' %>
    <%= f.label :members %>
    <%= f.text_field :members %>
    <%= f.label :country %>
    <%= f.text_field :country, :placeholder => 'Berlin, Germany' %>
    <%= f.label :image %>
    <%= f.text_field :image %>
    <%= f.label :info %>
    <%= f.text_field :info %>
    
    <%= f.submit %>
<% end %>