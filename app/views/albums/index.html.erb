<h1>All albums</h1>

<div class="gallery">
<% @albums.each do |album|%>
    <div class="image_container">
    <%= link_to image_tag(album.image, :class =>'image'), album %>
        <div class="middle">
            <div class="text"><%= link_to album.title, album %></div>
        </div>
        </div>
    <% if album.image.empty? %>
        <%= link_to album.title, album %>
    <% end %>
<% end %>
</div>
