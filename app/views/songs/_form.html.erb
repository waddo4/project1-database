<%= form_for @song do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :artist_id %>
    <%= f.select :artist_id, Artist.pluck(:name, :id), :include_blank => true %>
    <%= f.label :album_id %>
    <%= f.select :album_id, Album.pluck(:title, :id), :include_blank => true %>
    <%= f.label :length %>
    <%= f.text_field :length %>
    <%= f.label :video %>
    <%= f.text_field :video %>
    <div class="checkbox">
        <%= check_box_tag(:genre) %>
        <%= label_tag(:genre, "Genre 1") %>
        <%= check_box_tag(:genre) %>
        <%= label_tag(:genre, "Genre 2") %>
        <%= check_box_tag(:genre) %>
        <%= label_tag(:genre, "Genre 3") %>
        <%= check_box_tag(:genre) %>
        <%= label_tag(:genre, "Genre 4") %>
    </div>

    <%= f.submit %>
<% end %>