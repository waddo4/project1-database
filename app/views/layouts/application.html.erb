<!DOCTYPE html>
<html>
  <head>
    <title>Geezer</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="icon" href="/assets/big_yoshi_fav.png">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
        <nav>
      <%= link_to 'Home', root_path %>
      |
        <div class="dropdown">
            <button class="dropbtn">Artists</button>
              <div class="dropdown-content">
                <%= link_to 'All Artists', artists_path %>
                <%= link_to 'New Artist', new_artist_path %>
            </div>
        </div>
      |
      <div class="dropdown">
            <button class="dropbtn">Albums</button>
              <div class="dropdown-content">
                <%= link_to 'All Albums', albums_path %>
                <%= link_to 'New Album', new_album_path %>
            </div>
        </div>
      |
      <div class="dropdown">
            <button class="dropbtn">Genres</button>
              <div class="dropdown-content">
                <%= link_to 'All Genres', genres_path %>
            </div>
        </div>
      |
      <div class="dropdown">
            <button class="dropbtn">Songs</button>
              <div class="dropdown-content">
                <%= link_to 'All Singles', songs_path %>
                <%= link_to 'New Single', new_song_path %>
            </div>
        </div>
      |
      <%= link_to 'Premium', premium_path %>
      |
      <% if @current_user.present? %>
        <% if @current_user.admin? %>
          <%= link_to "All users", users_path %>
        <% end %>
        <%= link_to "Sign out #{ @current_user.email }", login_path, :method => 'delete' %>
      <% else %>
        <%= link_to 'Sign up', new_user_path %>
        <%= link_to 'Sign in', login_path %>
      <% end %>
    </nav>

      <%= yield %>

    <footer>
      <p>Background wallpapers by <%= link_to 'Leif Podhajsky', "https://leifpodhajsky.com/" %></p>
    </footer>
    </div>
  </body>
</html>
